<resources>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
  </style>

  <style name="TitleText">
    <item name="android:textSize">@dimen/title</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/primaryTextColor</item>
  </style>

  <style name="NormalTitleText">
    <item name="android:textSize">@dimen/title</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/primaryTextColor</item>
  </style>

  <style name="Body1Text">
    <item name="android:textSize">@dimen/body</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/primaryTextColor</item>
  </style>

  <style name="Body2Text">
    <item name="android:textSize">@dimen/body2</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/primaryTextColor</item>
  </style>

  <style name="ButtonText">
    <item name="android:textSize">@dimen/button</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <dimen name="headline">20sp</dimen>
  <dimen name="title">18sp</dimen>
  <dimen name="secondaryTitle">16sp</dimen>
  <dimen name="button">14sp</dimen>
  <dimen name="body">16sp</dimen>
  <dimen name="body2">14sp</dimen>

  <color name="primaryTextColor">#000000</color>

</resources>
